<%- include('layout/header') %>

<div class= "container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit Ani(<%= Ani.title %>)</h3>                    
    </div>
<div class="card-body p-4">
    <form action="/update/<%= Ani._id %>" method="post" id="add-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control form-control-lg" 
            placeholder="Enter Title" value="<%= Ani.title %>" required />
        </div>
        <div class="mb-3">
            <label for="plot">Plot</label>
            <input type="text" name="plot" class="form-control form-control-lg" 
            placeholder="Enter Plot" value="<%= Ani.plot %>" required />
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Select Image</label>
            <input type="file" name="image" class="form-control form-control-lg" />
             <img src="/<%= Ani.image %>" width="100" class="img-thumnail mt-1">
        </div>
        <input type="hidden" name="old_image" value="<%=Ani.image %>">
        <div class="mb-3 d-grid">
            <input type="submit" name="submit" value="update Ani" class="btn btn-success btn-lg">
        </div>
        </form>
        </div>
      </div>
     </div>
    </div>
</div>    
<%- include('layout/footer') %>